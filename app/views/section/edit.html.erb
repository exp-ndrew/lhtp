<div class="container">
  <h1><%= @section.name %></h1>
  <form class='form-group' action='/sections/<%= @section.id %>' method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="name">Section Name</label>
    <input class='form-control' type='text' name='name' value='<%= @section.name %>'>
    <label for='number'>Sort Order</label>
    <input class="form-control" type='number' name='number' value='<%= @section.number %>'>
    <br>
    <button class='btn btn-primary'>Submit Changes</button>
  </form>
  <a href="/sections">Go back</a>
</div>
