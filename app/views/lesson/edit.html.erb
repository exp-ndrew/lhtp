<div class="container">
  <h1><%= @lesson.name %></h1>
  <form class='form-group' action='/lessons/<%= @lesson.id %>' method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="name">Lesson Name</label>
    <input class='form-control' type='text' name='name' value='<%= @lesson.name %>'>
    <label for='text'>Lesson Text</label>
    <textarea class="form-control" name='text'><%= @lesson.text %></textarea>
    <label for='number'>Number</label>
    <input class="form-control" type='number' name='number' value='<%= @lesson.number %>'>
    <button class='btn btn-primary'>Submit Changes</button>
  </form>
  <a href="/">Go back</a>
</div>
