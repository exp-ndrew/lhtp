<div class="container">
  <h1>Lessons</h1>
  <div class="row">
    <div class="col-md-8">
      <table class="table">
        <thead>
          <td><strong>#</strong></td>
          <td><strong>Lesson Title</strong></td>
        </thead>
        <% sorted_lessons = @lessons.sort_by{ |i| i.number} %>
        <% sorted_lessons.each do |lesson| %>
        <tr>
          <td><%= lesson.number %>.</td>
          <td><a href="/lessons/<%= lesson.id %>"><%= lesson.name %> </a></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-4"></div>
  </div> <!--row-->
  <a href="lessons/new" class='btn btn-primary'> New Lesson </a>
</div>
