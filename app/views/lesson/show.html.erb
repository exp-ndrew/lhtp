<div class="container">
  <h1><%= @lesson.name %></h1>
  <a href="/lessons/<%= @lesson.id %>/previous" class="btn btn-warning btn-xs">Previous Lesson</a>
  <a href="/lessons/<%= @lesson.id %>/next" class="btn btn-success btn-xs">Next Lesson</a>
  <br>
  <br>
  <p><%= @lesson.text %></p>
  <a href="/lessons/<%= @lesson.id %>" data-method="delete" rel="nofollow" class="btn btn-danger btn-xs">Delete Lesson</a>
  <a href="/lessons/<%= @lesson.id %>/edit" data-method="get" class="btn btn-primary btn-xs">Edit Lesson</a><br>
  <a href="/">Go back</a>
</div>
